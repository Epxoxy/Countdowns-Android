<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/daytimeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/daysTextView"
                        android:textSize="86dp"
                        android:fontFamily="@string/font_family_light"
                        android:textColor="@color/fontColor"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/daysLabel"
                        android:text="days"
                        android:textSize="40dp"
                        android:duplicateParentState="true"
                        android:fontFamily="@string/font_family_light"
                        android:textColor="@color/fontColor"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/hoursTextView"
                            android:textSize="48dp"
                            android:fontFamily="@string/font_family_light"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/hoursLabel"
                            android:text="hours"
                            android:textSize="28dp"
                            android:fontFamily="@string/font_family_light"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/minutesTextView"
                            android:textSize="48dp"
                            android:fontFamily="@string/font_family_light"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/minutesLabel"
                            android:text="minutes"
                            android:textSize="28dp"
                            android:fontFamily="@string/font_family_light"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/secondsTextView"
                            android:textSize="48dp"
                            android:fontFamily="@string/font_family_light"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/secondsLabel"
                            android:text="seconds"
                            android:textAlignment="center"
                            android:textSize="28dp"
                            android:fontFamily="@string/font_family_light"
                            android:textColor="@color/fontColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/celebrationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:fontFamily="@string/font_family_light"
                android:textColor="@color/fontColor"
                android:textAlignment="center" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nameTextView"
                    android:text="Name"
                    android:textSize="32dp"
                    android:fontFamily="@string/font_family_light"
                    android:textColor="@color/fontColor"
                    android:layout_width="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/idTestTextView"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_light"
                    android:textColor="@color/fontColor"
                    android:textAlignment="center" />
            </LinearLayout>
            <TextView
                android:id="@+id/targetTextView"
                android:text="targetTime"
                android:textSize="20dp"
                android:fontFamily="@string/font_family_light"
                android:textColor="@color/fontColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>