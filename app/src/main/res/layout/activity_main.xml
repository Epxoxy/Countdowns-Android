<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/homeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="COUNTDOWNS"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@string/font_family_light"
                    android:textAlignment="center"
                    android:textSize="40dp" />
                <TextView
                    android:id="@+id/homeSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@string/font_family_light"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp"
                    android:textColor="#FFFFFF"
                    android:text="FOR PERSONAL USE ONLY" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">
            <TextView
                android:id="@+id/startMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@drawable/textselector"
                android:fontFamily="@string/font_family_light"
                android:text="MY-MAIN"
                android:textSize="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <TextView
                android:id="@+id/debugBlur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@drawable/textselector"
                android:fontFamily="@string/font_family_light"
                android:text="DEBUGS"
                android:textSize="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@drawable/textselector"
                android:fontFamily="@string/font_family_light"
                android:text="SETTINGS"
                android:textSize="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:padding="10dp"
            android:fontFamily="@string/font_family_light"
            android:text="Copyright2017 \@Epxoxy. All Rights Reserved" />

    </LinearLayout>
</FrameLayout>
