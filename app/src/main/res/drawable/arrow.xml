<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
            <stroke android:width="2dp" android:color="#4fa5d5" />
        </shape>
    </item>
    <item android:gravity="center|right" android:right="8dp">
        <rotate android:fromDegrees="90" android:toDegrees="0">
            <layer-list>
                <item android:gravity="center|right">
                    <rotate android:fromDegrees="315"
                        android:pivotX="95%"
                        android:pivotY="45%"
                        android:toDegrees="0">
                        <shape android:shape="rectangle">
                            <size android:height="1.5dp" android:width="12dp" />
                            <stroke android:width="1dp" android:color="#4fa5d5"/>
                        </shape>
                    </rotate>
                </item>
                <item android:gravity="center|left">
                    <rotate android:fromDegrees="45"
                        android:pivotX="95%"
                        android:pivotY="45%"
                        android:toDegrees="0">
                        <shape android:shape="rectangle">
                            <size android:height="1.5dp" android:width="12dp"/>
                            <stroke android:width="1dp" android:color="#4fa5d5"/>
                        </shape>
                    </rotate>
                </item>
            </layer-list>
        </rotate>
    </item>
</layer-list>